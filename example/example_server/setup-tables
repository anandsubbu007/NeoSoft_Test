#!/bin/sh

# Start docker
echo "Starting docker"
docker-compose up --build --detach

while ! netstat -tna | grep 'LISTEN' | grep -q '.8090'; do
  echo "Waiting for Postgres..."
  sleep 2 # time in seconds, tune it as needed
done

sleep 2

echo "Postgres is ready"

docker-compose run -T postgres env PGPASSWORD="DB_PASSWORD" psql -h postgres -U postgres -d example < generated/tables.pgsql
docker-compose run -T postgres env PGPASSWORD="DB_PASSWORD" psql -h postgres -U postgres -d example < generated/table-serverpod.pgsql
docker-compose run -T postgres env PGPASSWORD="DB_PASSWORD" psql -h postgres -U postgres -d example < ../../../serverpod/modules/serverpod_auth/serverpod_auth_server/generated/tables.pgsql
docker-compose run -T postgres env PGPASSWORD="DB_PASSWORD" psql -h postgres -U postgres -d example < ../../../serverpod/modules/serverpod_chat/serverpod_chat_server/generated/tables.pgsql

echo "Stopping docker"
docker-compose stop
